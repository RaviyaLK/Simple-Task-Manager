datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  tasks        Task[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  status      String   @default("pending")
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}
